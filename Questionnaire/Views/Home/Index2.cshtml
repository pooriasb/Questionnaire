<body>
    <button type="button" id="mobile-nav-toggle"><i class="fa fa-bars"></i></button>


    <!--==========================
      Hero Section
    ============================-->
    <section id="hero">
        <div class="hero-container">
            <div class="wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                <div class="hero-logo">

                </div>

                <h1>@ViewBag.SiteBody1</h1>
                <h2>
                    @* حمل و نقل بين الملل  <span class=""> گوانجو مجموعه اي با سابقه در عرصه حمل و نقل بين الملل و بازرسي كالا   </span>*@
                    @ViewBag.SiteBody2

                </h2>
                <div class="actions">
                    <a href="/Questioner/QuestionerAccount/QuestionerRegister" class="btn-get-started">ثبت نام پرسشگر</a>
                    <a href="/account/register" class="btn-services">ثبت نام پاسخ دهنده</a>
                </div>
            </div>
        </div>
    </section>

    <!--==========================
      Header Section
    ============================-->
    <div id="header-sticky-wrapper" class="sticky-wrapper" style="height: 90px;">
        <header id="header" style="">
            <div class="container">

                <div id="logo" class="pull-right">
                    <a href="#hero"></a>
                    <!-- Uncomment below if you prefer to use a text image -->
                    <!--<h1><a href="#hero">Header 1</a></h1>-->
                </div>

                <nav id="nav-menu-container">
                    <ul class="nav-menu sf-js-enabled sf-arrows" style="touch-action: pan-y;">
                        <li class="menu-active"><a href="#hero">صفحه اصلی</a></li>
                        <li><a href="#about">درباره ما</a></li>
                        <li><a href="#services">خدمات</a></li>
                        <li><a href="/account/register">ثبت نام پاسخ دهنده</a></li>
                        <li><a href="/Questioner/QuestionerAccount/QuestionerRegister">ثبت نام پرسشگر</a></li>
                        <li><a href="/account/login">ورود</a></li>

                        <li><a href="#contact">تماس با ما</a></li>
                    </ul>
                </nav><!-- #nav-menu-container -->
            </div>
        </header>
    </div><!-- #header -->
    <!--==========================
      About Section
    ============================-->
    <section id="about">
        <div class="container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="section-title">هدف ما</h3>
                    <div class="section-title-divider"></div>
                    <p class="section-description">
                       @ViewBag.SitePurpose
                    </p>
                </div>
            </div>
        </div>
        <div class="container about-container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
            <div class="row">
                <div class="col-md-6 col-md-push-6 about-content">
                    <h2 class="about-title">معرفي شركت </h2>

                    <p class="about-text">
                        @ViewBag.SiteAbout
                    </p>
                   
                </div>
            </div>
        </div>
    </section>

    <!--==========================
      Services Section
    ============================-->
    <section id="services">
        <div class="container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="section-title">خدمات ما</h3>
                    <div class="section-title-divider"></div>
                    <p class="section-description">وب سایت ما خدمات زیر را اراعه میکند</p>
                </div>
            </div>

            <div class="row">
                
                <div class="col-md-4 service-item">
                    <div class="service-icon"><i class="fa fa-desktop"></i></div>
                    <h4 class="service-title">
                        <a href="#">

                            @ViewBag.SV1Title
                        </a>
                    </h4>
                    <p class="service-description"> @ViewBag.SV1</p>
                </div>


                <div class="col-md-4 service-item">
                    <div class="service-icon"><i class="fa fa-road"></i></div>
                    <h4 class="service-title"><a href="#"> @ViewBag.SV2Title</a></h4>
                    <p class="service-description">@ViewBag.SV2</p>
                </div>
                <div class="col-md-4 service-item">
                    <div class="service-icon"><i class="fa fa-shopping-bag"></i></div>
                    <h4 class="service-title"><a href=""> @ViewBag.SV3Title</a></h4>
                    <p class="service-description">@ViewBag.SV2</p>
                </div>
            </div>
        </div>
    </section>

