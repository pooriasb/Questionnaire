    <!--==========================
      Contact Section
    ============================-->
    <section id="contact">
        <div class="container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="section-title">تماس با ما</h3>
                    <div class="section-title-divider"></div>
                    <p class="section-description">در هر ساعت از شبانه روز که بخواهید میتوانید با ما در ارتباط باشید</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 col-md-push-2">
                    <div class="info">
                        <div>
                            <i class="fa fa-map-marker"></i>
                            <p> @ViewBag.Address </p>
                        </div>

                        <div>
                            <i class="fa fa-envelope"></i>
                            <p>@ViewBag.Email</p>
                        </div>

                        <div>
                            <i class="fa fa-phone"></i>
                            <p style="direction:ltr;text-align:right">@ViewBag.Tell </p>

                        </div>

                    </div>
                </div>

                <div class="col-md-5 col-md-push-2">
                    <div class="form">
                        <div id="sendmessage">فرم زير پل ارتباطي بين ما و شماست و شما ميتوانيد  درخواست پشتيباني</div>
                        <div id="errormessage"></div>
                        <form action="" method="post" role="form" class="contactForm">
                            <div class="form-group">
                                <input type="text" name="name" class="form-control" id="name" placeholder="نام" data-rule="minlen:4" data-msg="Please enter at least 4 chars">
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" id="email" placeholder="ایمیل" data-rule="email" data-msg="Please enter a valid email">
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="subject" id="subject" placeholder="موضوع" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="پیام"></textarea>
                                <div class="validation"></div>
                            </div>
                            <div class="text-center"><button type="submit">ارسال پیام</button></div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!--==========================
      Footer
    ============================-->
