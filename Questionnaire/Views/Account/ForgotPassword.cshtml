@model QuestionnaireProject.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "رمز عبور خود را فراموش کرده اید؟";
}

<div class="row" style="margin-top: 20vh">
    <div class="col-md-3"></div>
    <div class="col-md-6 center-block">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3>@ViewBag.Title</h3>

            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    <h4>کد ملی خود را وارد نمایید.</h4>
                    <hr/>
                    @Html.ValidationSummary("", new {@class = "text-danger"})
                    <div class="form-group">
                        @Html.LabelFor(m => m.NationalId, new {@class = "col-md-2 control-label"})
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.NationalId, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="ارسال کد"/>
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
