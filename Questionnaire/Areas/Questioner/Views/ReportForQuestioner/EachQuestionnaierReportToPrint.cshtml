@model List<QuestionnaireProject.Areas.Questioner.Models.EachQuestionnaireReportModel>
@using QuestionnaireProject.Models
@{
    ViewBag.Title = "EachQuestionnaierReportToPrint";
    //  Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    Layout = "~/Views/Shared/_QuestionerDashboardLayout.cshtml";
}


@{
    int? responders = ViewBag.responders as int?;
}
<style>
    @@media print {
        body * {
        visibility: hidden;
            }
        #print-area, #print-area * {
            visibility: visible;
        }
        
}




    h2 {
        font-size: 15px !important;
        border: 1px solid dimgray;
        text-align: center;
        padding: 10px;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        min-width: 1cm;
        padding: 5px;
    }

    .dot {
        border-radius: 50%;
        behavior: url(PIE.htc);
        /* remove if you don't care about IE8 */
        width: 25px;
        height: 25px;
        padding: 8px;
        background: #fff;
        border: 2px solid #666;
        color: white;
        background-color: red;
        text-align: center;
        font: 10px Arial, sans-serif;
    }

    .question {
        line-height: 1cm;
        font-weight: bold;
        min-width: 4cm;
        font-size: 10px;
    }

    .answer {
        font-size: 10px;
        text-align: center;
        line-height: 20px;
    }

    .choice {
        color: white;
        background-color: dimgray !important;
        border: 1px solid dimgray;
        padding: 2px;
        border-radius: 2px;
    }

    @@page {
        margin: 0.1cm;
    }
</style>
<div class="box">
    <div class="box-header bg-aqua">
        <button class="btn btn-default center-block" id="print">
            <span class="fa fa-print"></span>
            چاپ گزارش کلی
        </button>

    </div>
</div>
