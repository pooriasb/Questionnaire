@model QuestionnaireProject.Areas.Responder.Controllers.RequestForResponderController.RequestForResponderDto
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ResponderLayout.cshtml";

}

<h2>تسویه حساب</h2>

@if (Model.HasPaymentRequest != true)
{
    <div class="box">
        <div class="box-header">
            <div class="box-title">تسویه حساب</div>
        </div>
        <div class="box-body">
            <h4 class="text-blue">در حال حاضر مبلغ موجود در کیف پول شما <b class="text-green">@Model.MoneyToRequest</b> تومان میباشد.</h4>
            <br/>
            <p>درخواست شما تنها در صورتیکه مبلغ بیش از <span>@Model.ResponderRequestLeastValue</span> تومان باشد قابل پیگیری است.</p>
            <p class="text-danger">همچنین درخواست های جدید شما تا زمان تعیین تکلیف آخرین درخواست قابل ثبت نمی باشد.</p>
            @if (Model.ResponderRequestLeastValue <= Model.MoneyToRequest)
            {
                <a class="btn btn-success" href="@Url.Action("PaymentRequest","RequestForResponder", new {area="Responder"})">ارسال درخواست پرداخت</a>

            }
        </div>
    </div>
}
else
{
    <div class="box bg-yellow">
        <div class="box-header">
            <h3>شما در حال حاضر یک درخواست در حال پیگیری دارد.</h3>
            <hr/>
            <p>تا زمان پایان رسیدگی، درخواست دیگری قابل ثبت نمیباشد.</p>
            <p>باتشکر</p>
        </div>

    </div>
}






