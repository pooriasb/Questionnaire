
@{
    ViewBag.Title = "داشبورد پرسشگر";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@model QuestionnaireProject.Areas.Questioner.Controllers.QuestionerController.QuestionerLandingPageDto

@Html.Raw(ViewBag.HtmlStr)
<h2>داشبورد پرسشگر</h2>


<div class="row">

    @*<div class="col-md-3">
            <h3>اعلانها</h3>
            @foreach (var notification in Model.Notifications)
            {
                <div class="alert alert-danger">
