    <div class="col-md-12">
        <h3>موجودی حساب</h3>

        <div class="row">

            <div class="col-md-3">
                <div class="small-box bg-maroon">
                    <div class="inner">
                        <h3>@Model.MoneyBalance</h3>

                        <p>مبلغ موجود در کیف پول شما</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                    <a href="#" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <h3>وضعیت درخواستها</h3>

        <div class="row">
            <div class="col-md-3">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3>@Model.SentRequestsCount</h3>

                        <p>درخواست های ارسالی</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                    <a href="@Url.Action("Index","RequestForQuestioner", new {area = "Questioner"})" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@Model.AcceptedRequestsCount</h3>

                        <p>درخواستهای تایید شده</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check"></i>
                    </div>
                    <a href="@Url.Action("Index","RequestForQuestioner", new {area = "Questioner"})" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@Model.RejectedRequsetsCount</h3>

                        <p>درخواست های رد شده</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-remove"></i>
                    </div>
                    <a href="@Url.Action("Index","RequestForQuestioner", new {area = "Questioner"})" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="small-box bg-orange">
                    <div class="inner">
                        <h3>@Model.UploadedFilesCount</h3>

                        <p>فایلهای پرسشنامه ارسالی</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-upload"></i>
                    </div>
                    <a href="@Url.Action("Index","RequestForQuestioner", new {area = "Questioner"})" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
        </div>

        <h3>وضعیت پرسشنامه ها</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@Model.NotPaidQuestionnairesCount</h3>

                        <p>پرسشنامه های پرداخت نشده</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check-square"></i>
                    </div>
                    <a href="@Url.Action("Index","QuestionnaireForQuestioner", new {area = "Questioner"})" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="small-box bg-purple">
                    <div class="inner">
                        <h3>@Model.InProcessQuestionnairesCount</h3>

                        <p>پرسشنامه های در حال اجرا</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-spinner fa-spin"></i>
                    </div>
                    <a href="@Url.Action("InProccessQuestionnaires","QuestionnaireForQuestioner", new {area = "Questioner"})" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@Model.FinishedQuestionnairesCount</h3>

                        <p>پرسشنامه های پایان یافته</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-flag-checkered"></i>
                    </div>
                    <a href="@Url.Action("FinishedQuestionnaires","QuestionnaireForQuestioner", new {area = "Questioner"})" class="small-box-footer">مشاهده <i class="fa fa-arrow-circle-left"></i></a>
                </div>
            </div>
        </div>



    </div>
</div>
