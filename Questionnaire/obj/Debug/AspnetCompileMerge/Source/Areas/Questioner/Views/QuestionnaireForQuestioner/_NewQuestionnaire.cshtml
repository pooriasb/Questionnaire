
@using Microsoft.Ajax.Utilities
@model QuestionnaireProject.Areas.Questioner.Models.QuestionnaireModel

<div class="box">
    <div class="box-header">

        <a class="btn" href="#newQuestionnaireField" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="newQuestionnaireField">
            <span class="fa fa-plus-circle fa-2x text-green">&nbsp;</span>
            <h4 class="box-title text-black">ایجاد پرسشنامه جدید</h4>
        </a>

    </div>
    <div class="box-body collapse @((ViewBag.Expanded==true) ? "in": "")" id="newQuestionnaireField">
        @using (Html.BeginForm("CreateQuestionnaire","QuestionnaireForQuestioner", new {area="Questioner"}, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.NewQuestionnaireViewModel.Name, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.NewQuestionnaireViewModel.Name, new { htmlAttributes = new { @class="form-control",
                        @id="questionnaireName",                     
                        @placeholder="نام پرسشنامه جدید را وارد کنید.",
                        @style="max-width: 100%" } })
                    @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.Name, "", new { @class = "text-danger" })



                </div>
                <p class="text-green">شرایط پاسخگویی را انتخاب نمایید.</p>
                <div class="row">

                    <div class="form-group col-md-1">
                        @Html.LabelFor(model => model.NewQuestionnaireViewModel.Sex, htmlAttributes: new { @class = "control-label" })
                        <select class="form-control" id="NewQuestionnaireViewModel_Sex" name="NewQuestionnaireViewModel.Sex">
                            <option value="2">همه</option>
                            <option value="0">زن</option>
                            <option value="1">مرد</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.Sex, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.NewQuestionnaireViewModel.ProvinceId, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.NewQuestionnaireViewModel.ProvinceId, new SelectList(Model.QuestionnairesDto.Provinces, "Id", "Name"),
                            "همه", new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.ProvinceId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.NewQuestionnaireViewModel.CityId, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.NewQuestionnaireViewModel.CityId, new SelectList(Model.QuestionnairesDto.Cities, "Id", "Name"),
                            "همه", new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.CityId, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.NewQuestionnaireViewModel.StudyFieldId, htmlAttributes: new { @class = "control-label" })

                        @Html.DropDownListFor(model => model.NewQuestionnaireViewModel.StudyFieldId, new SelectList(Model.QuestionnairesDto.StudyFields, "Id", "Name"),
                            "همه", new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.StudyFieldId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-1">
                        @Html.LabelFor(model => model.NewQuestionnaireViewModel.MinAge, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.NewQuestionnaireViewModel.MinAge, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.MinAge, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-1">
                        @Html.LabelFor(model => model.NewQuestionnaireViewModel.MaxAge, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.NewQuestionnaireViewModel.MaxAge, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.MaxAge, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.NewQuestionnaireViewModel.PeopleCount, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.NewQuestionnaireViewModel.PeopleCount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.PeopleCount, "", new { @class = "text-danger" })

                    </div>
                </div>

               
            </div>

            if (Model.NewQuestionnaireViewModel != null)
            {
                @Html.HiddenFor(model => model.NewQuestionnaireViewModel.QuestionnaireId, new{Value = Model.NewQuestionnaireViewModel.QuestionnaireId})

            }

           

        
            @Html.ValidationMessageFor(model => model.NewQuestionnaireViewModel.QuestionnaireId, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="ثبت پرسشنامه" class="btn btn-primary" />
                </div>
            </div>

        }

    </div>
</div>



