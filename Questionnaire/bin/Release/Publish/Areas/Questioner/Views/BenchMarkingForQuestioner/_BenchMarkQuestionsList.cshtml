@model QuestionnaireProject.Areas.Questioner.Models.BenchMarkingQuestionModel

<div class="box">
    <div class="box-header">
        <div class="box-title">لیست پرسشنامه لیاقت سنجی</div>
        <hr />
    </div>
    <div class="box-body">
        <table class="text-center table table-hover">
            <thead>
                <tr>
                    <th>ردیف</th>
                    <th>صورت پرسش</th>
                    <th>تعداد گزینه</th>
                    <th>مشاهده جزئیات</th>
                    <th>ویرایش</th>
                    <th>حذف</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var question in Model.BenchMarkingQuestionDto.QuestionAndAnswers)
            {
                <tr>
                    <td>1</td>
                    <td>
                        @question.Question.ToString()
                    </td>
                    <td>

                        @question.Answers.Count

                    </td>
                    <td>
                        <button class="btn btn-info">
                            مشاهده جزئیات
                        </button>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("BenchMarkingQuestionEdit","BenchMarkingForQuestioner",new {area="Questioner", questionId = question.QuestionId, questionnaireId=@Request.Params["questionnaireId"]})">
                            ویرایش
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="@Url.Action("BenchMarkingQuestionDelete","BenchMarkingForQuestioner",new {area="Questioner", questionId = question.QuestionId, questionnaireId=@Request.Params["questionnaireId"]})">
                            حذف
                        </a>

                    </td>
                </tr>
            }
            
            </tbody>
        </table>
    </div>
</div>
